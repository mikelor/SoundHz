<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
        x:Class="SoundHz.Views.SoundBoardsPage"
        xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:m="clr-namespace:SoundHz.Models"
        xmlns:vm="clr-namespace:SoundHz.ViewModels"
        x:DataType="vm:SoundBoardsViewModel">
        <Grid>
                <RefreshView Command="{Binding RefreshingCommand}" IsRefreshing="{Binding IsRefreshing}">
                        <CollectionView
                                ItemsSource="{Binding Items}"
                                SelectionMode="Single"
                                SelectedItem="{Binding SelectedSoundBoard, Mode=TwoWay}">
                                <CollectionView.ItemTemplate>
                                        <DataTemplate x:DataType="m:SoundBoard">
                                                <Border
                                                        Margin="4"
                                                        Padding="12"
                                                        BackgroundColor="{AppThemeBinding Light={StaticResource White},
                                                                                                  Dark={StaticResource Black}}"
                                                        SemanticProperties.Description="{Binding Title}"
                                                        StrokeShape="RoundRectangle 8">
                                                        <VerticalStackLayout>
                                                                <Label
                                                                        FontSize="Large"
                                                                        Text="{Binding Title}"
                                                                        TextColor="{AppThemeBinding Light={StaticResource Primary},
                                                                                            Dark={StaticResource Gray100}}" />
                                                                <Label
                                                                        FontSize="Small"
                                                                        Text="{Binding Description}"
                                                                        TextColor="{AppThemeBinding Light={StaticResource Gray900},
                                                                                            Dark={StaticResource Gray200}}"
                                                                        LineBreakMode="WordWrap" />
                                                        </VerticalStackLayout>
                                                </Border>
                                        </DataTemplate>
                                </CollectionView.ItemTemplate>
                        </CollectionView>
                </RefreshView>

                <Border
                        HorizontalOptions="End"
                        VerticalOptions="End"
                        Margin="24"
                        Padding="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Gray900}}"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 28"
                        HeightRequest="56"
                        WidthRequest="56">
                        <Border.Shadow>
                                <Shadow
                                        Brush="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray200}}"
                                        Offset="0,6"
                                        Radius="12"
                                        Opacity="0.35" />
                        </Border.Shadow>
                        <Button
                                Text="+"
                                FontSize="28"
                                WidthRequest="56"
                                HeightRequest="56"
                                BackgroundColor="Transparent"
                                TextColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray100}}"
                                Command="{Binding CreateSoundBoardCommand}"
                                SemanticProperties.Description="Add a new sound board"
                                CornerRadius="28" />
                </Border>
        </Grid>
</ContentPage>

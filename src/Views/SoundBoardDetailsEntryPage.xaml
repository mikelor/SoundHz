<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
        x:Class="SoundHz.Views.SoundBoardDetailsEntryPage"
        xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:vm="clr-namespace:SoundHz.ViewModels"
        x:DataType="vm:SoundBoardDetailsEntryViewModel"
        Title="Add SoundBoard">
        <ScrollView>
                <VerticalStackLayout Margin="24" Spacing="16">
                        <Label
                                SemanticProperties.Description="Title entry heading"
                                Style="{StaticResource Headline}" Text="New SoundBoard" />
                        <Entry
                                Placeholder="Title"
                                Text="{Binding Title, Mode=TwoWay}"
                                Keyboard="Text"
                                ClearButtonVisibility="WhileEditing" />
                        <Editor
                                Placeholder="Description"
                                Text="{Binding Description, Mode=TwoWay}"
                                AutoSize="TextChanges" />
                        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                                <Button
                                        Grid.Column="0"
                                        Text="Cancel"
                                        Command="{Binding CancelCommand}" />
                                <Button
                                        Grid.Column="1"
                                        Text="Add"
                                        Command="{Binding AddCommand}" />
                        </Grid>
                </VerticalStackLayout>
        </ScrollView>
</ContentPage>
